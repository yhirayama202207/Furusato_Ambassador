<% if @article.liked_by?(current_user) %>
    <label>
      <%= link_to article_likes_path(@article), method: :delete, remote: true do %>
        <i class="fas fa-heart" style="color: #ff4500;"></i>
      <% end %>
      <%= @article.likes.count %> いいね済み
    </label>
    <% else %>
    <label>
      <%= link_to article_likes_path(@article), method: :post, remote: true do %>
        <i class="fas fa-heart" style="color: #d3d3d3;"></i>
      <% end %>
      <%= @article.likes.count %> いいね
    </label>
  <% end %>
