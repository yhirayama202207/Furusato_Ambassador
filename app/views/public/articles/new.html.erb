          <%#= f.collection_check_boxes(:tag_ids, @tags, :id, :name) do |tag| %>
            <%#= tag.label do %>
              <%#= tag.check_box %>
              <%#= tag.text%>
            <%# end %>
          <%# end %>
        <%# end %>
    <label>場所／お店の名前</label>
    <%= f.text_field :name %></br>
    </br>

    <div style="text-align:center;">
