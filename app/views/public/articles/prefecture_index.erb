<div class= "row">
<div class= "col-2">
  <table class="table table-hover table-bordered table-inverse">
    <thead>
      <tr>
        <th>都道府県から</br>記事を検索する</br>Search by prefecture</th>
      </tr>
    </thread>
    <tbody>
        <% @japan_prefectures.each do |japan_prefecture| %>
        <tr>
        <td><%= link_to japan_prefecture.name, articles_prefecture_index_path(japan_prefecture.id) %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>

<div class= "col-8">
</br>
<h5><%= @japan_prefecture.name %>の記事（全<%= @japan_prefecture.articles.count %>件）</h5>

<div class= "row">
<% @articles.each do |article| %>
<div class= "col-3">

<%= link_to user_path(article.user.id) do %>
  <% if article.user.image.attached? %>
    <%= image_tag article.user.image, size: "20x20" %>
  <% else %>
    <%= image_tag 'no_image.jpg', size: "20x20" %>
  <% end %>
  <%= article.user.user_name %>
<% end %>

<%= link_to article_path(article.id) do %>
<% if article.image.attached? %>
  <%= image_tag article.image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image.png', size: "200x200" %>
<% end %>
<%= article.title %>
<% end %>
</br>
<%= article.japan_prefecture.name %>&emsp;<%= article.japan_prefecture.name_english %></br>
</div>
</div>

<% if article.liked_by?(current_user) %>
    <label>
      <%= link_to article_likes_path(article), method: :delete do %>
        <i class="fas fa-heart"></i>
      <% end %>
      <%= article.likes.count %>いいね
    </label>
  <% else %>
    <label>
      <%= link_to article_likes_path(article), method: :post do %>
        <i class="far fa-heart"></i>
      <% end %>
      <%= article.likes.count %>いいね
    </label>
  <% end %>
  <% if article.foot_printed_by?(current_user) %>
    <label>
      <%= link_to article_foot_prints_path(article), method: :delete do %>
        <i class="fas fa-paw"></i>
      <% end %>
      <%= article.foot_prints.count %>行った！
    </label>
    <% else %>
    <label>
      <%= link_to article_foot_prints_path(article), method: :post do %>
        <i class="fas fa-paw"></i>
      <% end %>
      <%= article.foot_prints.count %>行った！
    </label>
  <% end %>
</div>
<% end %>
